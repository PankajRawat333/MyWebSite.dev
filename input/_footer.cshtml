<footer>
    <div class="container">
        <div class="row">
                <div class="col-md-12 text-center">
                    <p class="copyright text-muted m-0">
                        @Document.GetString(WebKeys.Copyright) by Pankaj Rawat
                        <br />
                        I shares my personal experience and does not represent my current and previous employer.
                    </p>
                    <ul class="list-inline text-center small">
                        @{
                            IDocument rssFeed = Outputs["**/*.rss"].FirstOrDefault();
                            IDocument atomFeed = Outputs["**/*.atom"].FirstOrDefault();
                        }
                        @if (rssFeed != null) {
                            <li class="list-inline-item">
                                <a href="@Context.GetLink(rssFeed)"><i class="fa fa-rss"></i> RSS Feed</a>
                            </li>
                        }
                        @if (atomFeed != null) {
                            <li class="list-inline-item">
                                <a href="@Context.GetLink(atomFeed)"><i class="fa fa-rss"></i> Atom Feed</a>
                            </li>
                        }                        
                    </ul>
                    <ul>
                        <li class="list-inline-item">
                            <a href="https://statiq.dev/">Generated by Statiq</a>
                        </li>
                    </ul>
                </div>
        </div>
    </div>
</footer>